<Window x:Class="Lesson1.MessageNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson1"
        mc:Ignorable="d"
        Title="MessageNotification" Height="100" Width="170"
        >
    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" >
        <Label DockPanel.Dock="Top" Content="Работа Завершена" HorizontalAlignment="Center" Foreground="#FFA43131" FontFamily="Showcard Gothic" FontSize="16"/>

        <Border CornerRadius="15">
            <Button Name="btnExit" Content="OK" DockPanel.Dock="Bottom" Margin="5, 5" Click="BtnExit_Click"></Button>
        </Border>
        
    </DockPanel>
</Window>
