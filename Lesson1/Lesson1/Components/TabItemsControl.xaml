<UserControl x:Class="Lesson1.Components.TabItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lesson1.Components"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="250">
    <UniformGrid Rows="1" ButtonBase.Click="OnButtonClick">
        <Button Name="LeftArrowButton">
            <fa:ImageAwesome MaxHeight="16" Icon="ArrowLeft"/>
        </Button>
        <Button Name="RightArrowButton">
            <fa:ImageAwesome MaxHeight="16" Icon="ArrowRight"/>
        </Button>
    </UniformGrid>
</UserControl>
